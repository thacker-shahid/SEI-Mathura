<%- include('partials/header') %>

  <!-- ============ Signup Form ============= -->

  <div class="container mt-5"  style="font-family: 'Baloo Da 2'; ">
      <div class="card">
          <div class="card-header text-center">
              <h4><strong>Sign Up</strong></h4>
          </div>
          <div class="card-body">
              <form action="/register" method="POST">

                  <div class="form-group">
                      <label for="email">Email:</label>
                      <input type="email" name="email" id="email" placeholder="Enter Your Email" required class="form-control" autocomplete="off">
                      <small id="emailvalid" class="form-text text-muted invalid-feedback">Your email must be a valid email</small>
                  </div>

                  <div class="form-group">
                      <label for="password">Password:</label>
                      <input type="password" name="password" id="password" placeholder="Enter Password" class="form-control" autocomplete="off">
                      <!-- <h6 id="passcheck" style="color: red;">**Please Fill the password</h6> -->
                  </div>


                  <div class="form-group">
                      <label for="conpassword">Confirm Password:</label>
                      <input type="password" name="confirmpassword" placeholder="Enter Password" id="conpassword" class="form-control" autocomplete="off">
                      <!-- <h6 id="conpasscheck" style="color: red;">**Password didn't match</h6> -->
                  </div>

                  <div class="card-footer mr-auto">
                      <button type="submit" id="submitbtn" class="btn cardbutton btn-primary">Sign Up</button>
                      <a href="/login" class="btn btn-outline-danger">cancel</a>
                  </div>
              </form>
          </div>
      </div>
  </div>

  </section>
  <br><br>

  <a href="#" class="to-top">
      <i class="fa fa-chevron-up"></i>
  </a>

<%- include('partials/footer') %>
