<%- include('partials/header') %>

    <!-- ========== Section Begins ========== -->

    <section class="sec container">
        <h2 class="card-title mt-5 text-center"><i class="fa fa-circle"></i> <%= info.firstName %>-Profile <i class="fa fa-circle"></i>
        </h2>

        <div class="card d-block m-auto">
            <img class="card-img-top d-block m-auto" style="border-radius: 100%; height: 15rem; width: 15rem;"
                src="logo.png" alt="User-Profile">
            <hr><br>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Username:</strong><%= info.firstName %></li>
                    <li class="list-group-item"><strong>Course Type: </strong><%= info.courseType %></li>
                    <li class="list-group-item"><strong>Gender: </strong><%= info.gender %></li>
                    <li class="list-group-item"><strong>DOB: </strong><%= info.dateOfBirth %></li>
                    <li class="list-group-item"><strong>E-mail: </strong><%= info.emailAddress %></li>
                    <li class="list-group-item"><strong>Mobile Number: </strong><%= info.phoneNumber %></li>
                    <li class="list-group-item"><strong>Area Pin Code: </strong><%= info.pinCode %></li>
                    <li class="list-group-item"><strong>District: </strong><%= info.district %></li>
                    <li class="list-group-item"><strong>State: </strong><%= info.state %></li>
                    <li class="list-group-item"><strong>Address: </strong><%= info.address %></li>
                    <li class="list-group-item"><strong>Final Grade: </strong><%= info.finalGrade %></li>
                    <li class="list-group-item"><strong>Course Start: </strong><%= info.courseStarts %></li>
                    <li class="list-group-item"><strong>courseEnds: </strong><%= info.courseEnds %></li>
                  </ul>
            </div>
            <div class="container text-center">
                <div class="row">
                  <h4>Marksheet: </h4>
                  <div class="col">
                    <a target="_blank" href="uploads/<%=info.tenthMarksheet%>">
                      <img class="mb-3" src="uploads/<%=info.tenthMarksheet%>" alt="tenthMarsheet" style="height: 200px; width: 300px;">
                    </a>
                  </div>
        
                  <!-- <div class="col">
                    <a target="_blank" href="../images/img1.jpg">
                      <img class="mb-3" src="../uploads/<%= info.aadharCard %>" alt="Forest" style="height: 200px; width: 300px;">
                    </a>
                  </div>
        
                  <div class="col">
                    <a target="_blank" href="../images/img1.jpg">
                      <img class="mb-3" src="../uploads/<%= info.profilePhoto %>" alt="Forest" style="height: 200px; width: 300px;">
                    </a>
                  </div> -->
                </div>
              </div>
              <div class="card-body">
                <form action="/finalGrade?id=<%= info._id>" method="POST">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Final Grade: </strong><input type="text" name="finalGrade" id=""></li>
                      </ul>
                      <button type="submit">Confirm</button>
                </form>
            </div>
        </div>
    </section>
    
</div>
    <br><br><br>

    <a href="#" class="to-top">
        <i class="fa fa-chevron-up"></i>
    </a>

    <%- include('partials/footer') %>